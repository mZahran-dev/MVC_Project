@model EmployeeViewModel
@inject IUnitOfWork _unitOfWork

@{
    //ViewData["Departments"] = _departmentRepository.GetAll();
    var departments = new SelectList(_unitOfWork.DepartmentRepository.GetAll(), nameof(Department.Id), nameof(Department.Name));
}
<div>
    @* Name Input *@
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    @* Age Input *@
    <div>
        <label class="col-form-label" asp-for="Age"></label>
        <input type="text" asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    @* Address Input *@
    <div>
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    @* Email input *@
    <div>
        <label class="col-form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    @* Salary Input *@
    <div>
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="text" asp-for="Salary" class="form-control" />
    </div>

    @* Phone Input *@
    <div>
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    @* HireDate Input *@
    <div>
        <label class="col-form-label" asp-for="HireDate"></label>
        <input asp-for="HireDate" class="form-control" />
    </div>

    @* Gender Input *@
    <div>
        <label class="col-form-label" asp-for="gender"></label>
        <input asp-for="gender" class="form-control" />
    </div>

    @* isActive Input *@
    <div>
        <label class="col-form-label" asp-for="isActive"></label>
        <input type="checkbox" asp-for="isActive" class="form-control" />
    </div>
    @* isDeleted Input *@
    <div>
        <label class="col-form-label" asp-for="IsDeleted"></label>
        <input type="checkbox" asp-for="IsDeleted" class="form-control" />
    </div>
    <div class="form-group"> 
        <label class="col-form-label" asp-for="department"  > </label>
         <select class="form-control" asp-items="@departments" asp-for="DepartmentId">
               
         </select>
    </div>

</div>