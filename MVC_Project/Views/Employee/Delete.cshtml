@model EmployeeViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete this Employee ?!</h1>
<br />
<br />

<form asp-action="Delete" asp-route-id="@Model.Id">
   
    <partial name="PartialViews/DeleteDetailsEmployeePartial"></partial> 
    <input type="hidden" asp-action="ImageName" />
    <input type ="submit" value="Delete" class="btn btn-danger mt-4" />
    <a asp-action="Index" class="btn btn-warning mt-4">Cancel</a>

</form>


