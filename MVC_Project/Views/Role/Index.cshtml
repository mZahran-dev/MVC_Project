@model IEnumerable<RoleViewModel>

<h1>All Roles</h1>
<br />
<a asp-controller="Role" asp-action="Create" class="btn btn-success mb-4">Add New User</a>

@* Seach input *@
<div class="row justify-content-center align-items-center mt-4 mb-3">

    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchInput" placeholder="Search By Name" />
        </div>
        <div>
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>


</div>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(R => R.id)</th>
                <th>@Html.DisplayNameFor(R => R.RoleName)</th>

                <th> Details </th>
                <th> Update </th>
                <th> Delete </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(R => role.id)</td>
                    <td>@Html.DisplayFor(R => role.RoleName)</td>
                   
                    <partial name="_ButtonsPartial" model="@role.id.ToString()"></partial>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="mt-5 alert alert-warning">
        <h3>there is no Roles</h3>
    </div>
}


